<div class="container">

  <p><%="********* Welcome to the longest word-game! *********"%></p>
  <h2><%= "Here is your grid:"%></h2>
  <% @random_letters.each do |letter| %>
  <p class="letter"><%= p letter %></p>
  <% end %>
  <p><%="****************************"%></p>
  <h2><%="What is your longest word?"%></h2>
  <form action="answer">
    <input class="placeholder" type="text" name="word" value="type your word">
    <input class="button" type="submit" value="send!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>

</div>
